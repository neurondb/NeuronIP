# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=neuronip
DB_PASSWORD=neuronip
DB_NAME=neuronip
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8082
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# CORS Configuration
# Comma-separated list of allowed origins (use * for all)
CORS_ALLOWED_ORIGINS=*
# Comma-separated list of allowed methods
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
# Comma-separated list of allowed headers
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Authentication Configuration
# Generate a secure random string for JWT secret (required for production)
JWT_SECRET=your-secret-key-change-this-in-production
ENABLE_API_KEYS=true

# NeuronDB Configuration
NEURONDB_HOST=localhost
NEURONDB_PORT=5433
NEURONDB_DATABASE=neurondb
NEURONDB_USER=neurondb
NEURONDB_PASSWORD=neurondb

# NeuronAgent Configuration
NEURONAGENT_ENDPOINT=http://localhost:8080
NEURONAGENT_API_KEY=your-neuronagent-api-key

# NeuronMCP Configuration
NEURONMCP_BINARY_PATH=/usr/local/bin/neurondb-mcp
